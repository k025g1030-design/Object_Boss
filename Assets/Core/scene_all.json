{
  "assetId":"data.scene.all",
  "remark":"",
  "scenes": [
    {
      "sceneId": "ui.menu",
      "className": "MenuScene",
      "sceneType": "gui",

      "supportsPause": false,

      "usesSystems": [
        "InputSystem",
        "UISystem",
        "AudioSystem"
      ],

      "stackBehavior": {
        "mode": "exclusive",        
        "updateUnderlay": false,  
        "renderUnderlay": false    
      }, 

      "transitFade": {
        "fadeOut": 0.5,
        "fadeIn": 0.5
      },

      "transitions": [
        { "eventId": "start", "targetSceneId": "game.main", "levelId": "data.level.00" },
        { "eventId": "continue", "targetSceneId": "game.main", "levelId": "data.level.01"},
        { "eventId": "readme", "targetSceneId": "ui.readme" },
        { "eventId": "exit", "targetSceneId": null }
      ]
    },
    {
      "sceneId": "ui.pause",
      "className": "PauseScene",
      "sceneType": "ui",

      "supportsPause": false,

      "usesSystems": [
        "InputSystem",
        "UISystem",
        "AudioSystem"
      ],

      "stackBehavior": {
        "mode": "overlay",        
        "updateUnderlay": false,  
        "renderUnderlay": true    
      }, 

      "transitions": [
        { "eventId": "resume",    "targetSceneId": "@pop" },       
        { "eventId": "toMenu",   "targetSceneId": "ui.menu" }
      ]
    },

    {
      "sceneId": "ui.over",
      "className": "OverScene",
      "sceneType": "ui",

      "supportsPause": false,

      "usesSystems": [
        "InputSystem",
        "UISystem",
        "AudioSystem"
      ],

      "stackBehavior": {
        "mode": "exclusive",        
        "updateUnderlay": false,  
        "renderUnderlay": false    
      }, 

      "transitFade": {
        "fadeOut": 0.5,
        "fadeIn": 0.5
      },

      "transitions": [
        { "eventId": "retry",     "targetSceneId": "game.main", "levelId": "data.level.01" },
        { "eventId": "toMenu",   "targetSceneId": "ui.menu" }
      ]
    },

    {
      "sceneId": "game.main",
      "className": "GameScene",
      "sceneType": "gameplay",

      "defaultLevelId": "data.level.00",   
      "supportsPause": true,
      "pauseSceneId": "ui.pause",

      "usesSystems": [
        "InputSystem",
        "MapSystem",
        "CameraSystem",
        "CombatSystem",
        "DialogSystem",
        "TutorialSystem",
        "AudioSystem"
      ],

      "stackBehavior": {
        "mode": "exclusive",        
        "updateUnderlay": false,  
        "renderUnderlay": false    
      }, 

      "transitFade": {
        "fadeOut": 0.5,
        "fadeIn": 0.5
      },

      "timeScale": 1.0,

      "transitions": [
        { "eventId": "gameOver",   "targetSceneId": "ui.over" },
        { "eventId": "toMenu",    "targetSceneId": "ui.menu" },
        { "eventId": "nextScene",  "targetSceneId": "game.main" }  
      ]
    }
  ]
}
